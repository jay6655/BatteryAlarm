<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@color/colorPrimaryDark</item>

        <item name="android:textColor">@android:color/white</item>
        <item name="android:colorButtonNormal">@color/buttonclr</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@android:color/white</item>

        <item name="actionButtonStyle">@style/Widget.AppCompat.ActionButton</item>

    </style>

    <style name="AppFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:colorButtonNormal">@color/buttonclr</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@android:color/white</item>

        <item name="actionButtonStyle">@style/Widget.AppCompat.ActionButton</item>
    </style>

    <style name="NumberPickerStyle">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="full_screen_dialog" parent="android:Theme.Dialog">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="alert_dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/mainBg</item>
    </style>

    <color name="ripple_clr">#808080</color>

</resources>