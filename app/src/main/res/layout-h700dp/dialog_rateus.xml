<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@android:color/transparent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_2sdp"
        android:background="@color/dialog_bg"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="@dimen/_5sdp"
            android:background="@color/dialog_bg"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content">

            <ImageView
                android:clickable="true"
                android:focusable="true"
                android:background="?actionBarItemBackground"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_close"
                android:id="@+id/img_close"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:contentDescription="@string/app_name" />

            <TextView
                android:fontFamily="@font/robotobold"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center"
                android:id="@+id/msg_enjoying"
                android:layout_marginBottom="@dimen/_1sdp"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_19sdp"
                android:text="@string/enjoying_the_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:fontFamily="@font/robotoregular"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center"
                android:layout_below="@+id/msg_enjoying"
                android:id="@+id/msg_desc"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_14sdp"
                android:text="@string/please_rate_your_experience_n_using_our_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:gravity="center_horizontal"
                android:background="@drawable/boarder_rate"
                android:layout_below="@+id/msg_desc"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_120sdp">

                <ImageView
                    android:id="@+id/img_sad"
                    android:src="@drawable/ic_happy"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:fontFamily="@font/robotoregular"
                    android:textSize="25sp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="@string/it_s_ok"
                    android:layout_below="@+id/img_sad"
                    android:id="@+id/txt_sad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_alignParentEnd="true"
                android:gravity="center_horizontal"
                android:background="@drawable/boarder_rate_happy"
                android:layout_below="@+id/msg_desc"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_120sdp">

                <ImageView
                    android:id="@+id/img_happy"
                    android:src="@drawable/ic_happy"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:fontFamily="@font/robotoregular"
                    android:textSize="25sp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="@string/loved_it"
                    android:layout_below="@+id/img_happy"
                    android:id="@+id/txt_happy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
